<launch>
    <arg name="tcp_port" default="10400" doc="tcp port"/>
    <arg name="node_name" default="yapper_view_mecanum" doc="node name"/>
    <arg name="message_display" default="screen" doc="output type"/>
    <!-- <remap from="/yapper/whisperOut_topic" to="/mecanum/whisperOut_topic" />--><!-- 여기서 가능 pub:/yapper/whisperOut_topic를 /mecanum/whisperOut_topic로 리맵-->
    
    <node pkg="yapper" type="yapper" name="$(arg node_name)" output="$(arg message_display)">
        <remap from="/yapper/whisperOut_topic" to="/mecanum/whisperOut_topic" /><!-- 여기서 가능 pub:/yapper/whisperOut_topic를 /mecanum/whisperOut_topic로 리맵-->
        <param name="pkg_name" value="$(arg node_name)" />
        <param name="tcp_port" value="$(arg tcp_port)"/>
    </node>
</launch>
